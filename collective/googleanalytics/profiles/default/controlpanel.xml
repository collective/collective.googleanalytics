<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.googleanalytics"
    purge="False">

	<configlet title="Google Analytics"
		action_id="Analytics" appId="Analytics"
		category="Products"
		condition_expr=""
		icon_expr="string:${portal_url}/++resource++analytics_images/chart_curve.gif"
		url_expr="string:${portal_url}/portal_analytics/@@analytics-controlpanel"
		visible="True"
        i18n:attributes="title">
		<permission>Manage portal</permission>
	</configlet>

</object>
