<dl class="portlet portletGoogleAnalytics"
    i18n:domain="collective.googleanalytics">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:replace="view/getTitle">Google Analytics</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
		<div tal:attributes="id view/getContainerId;" 
		    class="analytics-async-container"></div>
		<script type="text/javascript" tal:content="view/getJavascript"></script>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <a href="http://www.google.com/analytics/" target="_blank">More analytics</a>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
